generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  name       String  @unique
  password   String
  orders     Order[]
  BTCbalance Int     @default(100)
  USDbalance Int     @default(100000)
}

model Order {
  id         Int           @id @default(autoincrement())
  price      Int
  userId     Int
  user       User          @relation(fields: [userId], references: [id])
  status     OrderStatus   @default(PENDING)
  coinType   OrderCoinType
  amount     Int           @default(1)
  created_at DateTime      @default(now())
}

enum OrderStatus {
  PENDING
  COMPLETED
}

enum OrderCoinType {
  BTCtoUSD
  USDtoBTC
}
